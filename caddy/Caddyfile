{
    admin off
}

router.szipat.lan {
    tls /etc/caddy/certs/wildcard.szipat.lan.crt /etc/caddy/certs/wildcard.szipat.lan.key
    reverse_proxy /* https://192.168.1.1:8443 {
        transport http {
            tls_insecure_skip_verify
        }
    }
}

pihole.szipat.lan {
    tls /etc/caddy/certs/wildcard.szipat.lan.crt /etc/caddy/certs/wildcard.szipat.lan.key
    redir / /admin 301
    reverse_proxy /* pihole:80
}

nextcloud.szipat.lan {
    tls /etc/caddy/certs/wildcard.szipat.lan.crt /etc/caddy/certs/wildcard.szipat.lan.key
    reverse_proxy /* nextcloud:80
}

jellyfin.szipat.lan {
    tls /etc/caddy/certs/wildcard.szipat.lan.crt /etc/caddy/certs/wildcard.szipat.lan.key
    reverse_proxy jellyfin:8096
}
